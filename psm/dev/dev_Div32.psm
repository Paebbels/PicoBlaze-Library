;;			Arg1 : Product R(15:8)
;;			Arg2 : Product R(23:16)
;;			Arg3 : Product R(31:24)
;;			
__dev_Div_Div32_Begin:
__dev_Div32_Div32_Begin:			OUTPUT	REG_ARG_0,		OPORT_DIV32_OPERANDA0	;	Write arg0 to Reg A0
															OUTPUT	REG_ARG_1,		OPORT_DIV32_OPERANDA1	;	Write arg2 to Reg B0
															OUTPUT	REG_ARG_2,		OPORT_DIV32_OPERANDA2	;	Write arg1 to Reg A1
															OUTPUT	REG_ARG_3,		OPORT_DIV32_OPERANDA3	;	Write arg3 to Reg B1
															OUTPUT	REG_TMP_0,		OPORT_DIV32_OPERANDB0	;	Write arg3 to Reg B1
															OUTPUT	REG_TMP_1,		OPORT_DIV32_OPERANDB1	;	Write arg3 to Reg B1
															OUTPUT	REG_TMP_2,		OPORT_DIV32_OPERANDB2	;	Write arg3 to Reg B1
															OUTPUT	REG_TMP_3,		OPORT_DIV32_OPERANDB3	;	Write arg3 to Reg B1
;PRAGMA function end						
